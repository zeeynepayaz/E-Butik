@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<section id="content">

    <section id="shop" class="container">

        <div class="row my-flex-card">


            <!-- sidebar start -->
            <div id="sidebar" class="col-md-3">
                <!-- sort widget start -->

                @await Component.InvokeAsync("SortProducts")

                @await Component.InvokeAsync("CategoryMenu")

                @await Component.InvokeAsync("FeaturedProducts")


            </div>
            <!-- sidebar end -->
            <!-- right column start -->


            <div class="col-md-9">

                <div class="row">

                    <div class="col-md-12 wow fadeIn" style="visibility: visible; animation-name: fadeIn;">
                        <div class="row product-results">
                            <div class="product-results">
                                <div class="col-xs-8">
                                    <p class="woocommerce-result-count">
                                        @Model.Count() tane ürün mevcut.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @foreach (var product in Model)
                    {
                        @Html.Partial("_ProductItem", product)
                    }

                </div>

            </div>
            <!-- right column end -->

        </div>

    </section>

</section>