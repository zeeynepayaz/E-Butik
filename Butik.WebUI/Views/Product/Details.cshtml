@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}


<section id="content">

    <!-- shop section start -->
    <section id="shop" class="container">

        <!-- row start -->
        <div class="row">

            <!-- sidebar start -->
            <div id="sidebar" class="col-md-3">

                <!-- sort widget start -->
                <div class="widget">



                </div>
                
                <!-- categories widget start -->
                @await Component.InvokeAsync("CategoryMenu")
                <!-- categories widget end -->
                <!-- featured products widget start -->
                @await Component.InvokeAsync("FeaturedProducts")
                <!-- featured products widget end -->

            </div>
            <!-- sidebar end -->
            <!-- main column start -->
            <div class="col-md-9">

                <div class="row">


                    <!-- product page top info start -->
                    <div class="col-md-12 product">
                        <div class="row">
                            <div class="col-md-6">
                                <div id="product-gallery" class="owl-carousel owl-theme" style="opacity: 1; display: block;">

                                <div class="item">
                                   <img alt="" class="img-responsive" src="~/images/products/small/@Model.Product.Image" />
                                </div>
                                    
                                </div>
                            </div>

                            <div class="col-md-6">

                                <div class="padding15">
                                    <h2 class="product-title"><b>@Model.Product.ProductName</b></h2>
                                    <p>
                                        <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
                                        3 Yorum
                                    </p>
                                    <p class="product-price">$@Model.Product.Price</p>
                                </div>
                                <p>@Model.Product.Description</p>

                                <div class="padding15">

                                    <form asp-action="AddToCart" asp-controller="Cart" method="post" class="form-inline">
                                        <input type="hidden" name="ProductId" value="@Model.Product.ProductId" />
                                        <div class="form-group qty">
                                            <div class="input-group">
                                                <span class="input-group-addon">Miktar</span>
                                                <input type="number" size="4" name="quantity" class="form-control" value="1" min="1" step="1">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fa fa-cart-plus fa-fw"></i> Sepete Ekle
                                        </button>
                                    </form>
                                </div>

                                <p>
                                    <b>Kategorisi:</b>
                                    @foreach (var item in Model.Categories)
                                    {
                                        <a href="#">@item.CategoryName</a>
                                    }
                                </p>

                            </div>
                        </div>
                    </div>
                    <!-- product page top info end -->
                    <!-- product page middle info start -->
                    <div class="col-md-12 padding25">


                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#spec" aria-expanded="true">Özellikleri</a></li>
                            <li class=""><a data-toggle="tab" href="#reviews" aria-expanded="false">Yorumlar(3)</a></li>
                        </ul>


                        <div class="tab-content">

                           

                            <!-- Specifications tab start -->
                            <div id="spec" class="tab-pane fade active in">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <tbody>

                                            @foreach (var item in Model.ProductAttributes)
                                            {
                                                <tr>
                                                    <td><b>@item.Attribute</b></td>
                                                    <td>@item.Value</td>
                                                </tr>
                                            }





                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- Specifications tab end -->
                            <!-- reviews tab start -->
                            <div id="reviews" class="tab-pane fade">

                                <div class="reviews-list">

                                    <div class="media">

                                        <a class="media-left" href="#">
                                            <img alt="" class="img-circle avatar" src="images/team/thumb8_40.jpg">
                                        </a>
                                        <div class="media-body">
                                            <p class="pull-right"><small><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></small></p>
                                            <h4 class="media-heading">Zeynep AYAZ <small>2 days ago</small></h4>
                                          Tam vaktinde geldi, çok güzel ürün...
                                        </div>
                                    </div>

                                    <div class="media">

                                        <a class="media-left" href="#">
                                            <img alt="" class="img-circle avatar" src="images/team/thumb5_40.jpg">
                                        </a>
                                        <div class="media-body">
                                            <p class="pull-right"><small><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></small></p>
                                            <h4 class="media-heading">Elif ÇETİNER <small>4 days ago</small></h4>
                                           Rengi ve kumaşına bayıldım :)
                                        </div>
                                    </div>

                                    <div class="media">

                                        <a class="media-left" href="#">
                                            <img alt="" class="img-circle avatar" src="images/team/thumb3_40.jpg">
                                        </a>
                                        <div class="media-body">
                                            <p class="pull-right"><small><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></small></p>
                                            <h4 class="media-heading">Pelinsu Aras <small>5 days ago</small></h4>
                                            Kendim diksem hala güzel olurdu, hiç beğenmedim.
                                        </div>
                                    </div>

                                </div>

                                <div class="page-header">
                                    <h4>Yorum Ekle</h4>
                                </div>

                                <p class="text-muted">Yorum eklemek için giriş yapmış olman gerekir.</p>

                                <form>
                                    <div class="row">
                                        <div class="form-group col-xs-6">
                                            <input type="text" class="form-control input-lg" placeholder="Name*" required="">
                                        </div>
                                        <div class="form-group col-xs-6">
                                            <input type="email" class="form-control input-lg" placeholder="Email*" required="">
                                        </div>

                                        <div class="form-group col-xs-12">
                                            <textarea class="form-control" rows="6" placeholder="Review*" required=""></textarea>
                                        </div>

                                        <div class="form-group col-xs-12 text-right">
                                            <button type="submit" class="btn btn-primary"><i class="fa fa-check fa-fw"></i>Gönder</button>
                                        </div>
                                    </div>
                                </form>

                            </div>
                            <!-- reviews tab end -->

                        </div>

                    </div>

                </div>
                <!-- row end -->

            </div>
            <!-- main column end -->

        </div>
        <!-- row end -->

    </section>
    <!-- shop section end -->

</section>
